{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "module": "esnext",
    "target": "es2020",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    "noImplicitThis": true,
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "isolatedModules": true,
    "removeComments": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "lib": ["ESNext", "DOM"],
    "jsx": "react-jsx"
  },
  "include": ["vite.config.ts", "packages/**/*.ts", "packages/**/*.tsx", "packages/**/*.vue", "packages/**/*.d.ts"]
}

{
  "name": "highlight-it",
  "version": "0.0.0",
  "description": "Highlight the keyword in document",
  "private": "true",
  "author": "ListeningRift",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ListeningRift/highlightIt.git"
  },
  "scripts": {
    "build:core": "pnpm -C packages/core build",
    "build:vue3": "pnpm -C packages/vue3 build",
